{% extends "base.html.twig" %}

{% block title %}{{ 'form.networkconfig.title'|trans({}, 'networkconfig') }} - {{ parent() }}{% endblock %}{% block boton_new %}
    <div class="btn-group record_actions">
        <a class="btn btn-warning" href="{{ path('networkfunction') }}">
            <i class="fa fa-list"></i> {{ 'action.network_function_list'|trans({}, 'global') }}
        </a>
        <a class="btn btn-primary" href="{{ path('nconfig_new') }}">
            <i class="fa fa-plus"></i> {{ 'action.new.submit'|trans({}, 'global') }}
        </a>
    </div>
{% endblock %}

{% block body %}
    <h1>{{ 'form.networkconfig.index.title'|trans({}, 'networkconfig') }}</h1>        {{ block ('boton_new') }}
    
    <table class="table table-responsive table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">{{ 'form.networkconfig.field.label.id'|trans({}, 'networkconfig') }}</th>
                <th scope="col">{{ 'form.networkconfig.field.label.name'|trans({}, 'networkconfig') }}</th>
                <th scope="col">{{ 'form.networkconfig.field.label.description'|trans({}, 'networkconfig') }}</th>
                {#<th scope="col">{{ 'form.networkconfig.field.label.config_value'|trans({}, 'networkconfig') }}</th>#}
                <th scope="col">{{ 'action.title'|trans({}, 'global') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for networkconfig in entities %}
                <tr>
                    <td>
                        <a href="{{ path('nconfig_show', {id: networkconfig.id}) }}">{{ networkconfig.id }}</a>
                        {#{{ networkconfig.id }}#}
                    </td>
                    <td>{{ networkconfig.name }}</td>
                    <td>{{ networkconfig.description }}</td>
                    {#<td>{{ networkconfig.configvalue }}</td>#}
                    <td>
                        <div class="btn-group">
                            {#<a class="btn btn-default btn-sm" href="{{ path('nconfig_show', {id: networkconfig.id}) }}">#}
                                {#<i class="fa fa-file-o"></i>#}
                                {#{{ 'action.show.submit'|trans({}, 'global') }}#}
                            {#</a>#}
                            <a class="btn btn-default btn-sm" href="{{ path('nconfig_edit', {id: networkconfig.id}) }}">
                                <i class="fa fa-edit"></i>
                                {{ 'action.edit.submit'|trans({}, 'global') }}
                            </a>

                                                </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

            {{ block ('boton_new') }}
    
{% endblock %}

